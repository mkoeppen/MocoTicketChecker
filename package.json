{
  "name": "moco-ticket-checker",
  "version": "1.0.2",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:firefox && npm run build:chrome",
    "build:firefox": "rollup -c --environment TARGET:firefox",
    "build:chrome": "rollup -c --environment TARGET:chrome",
    "dev": "nodemon --watch src --ext css,ts,js,json --exec \"npm run build\"",
    "package:firefox": "cd dist/firefox && zip -r ../firefox.zip .",
    "package:chrome": "cd dist/chrome && zip -r ../chrome.zip .",
    "source-zip": "zip -r dist/source.zip . -x 'node_modules/*' -x 'dist/*' -x 'dist/source.zip'",
    "type-check": "tsc --noEmit",
    "prepare-publish": "npm run build && npm run package:firefox && npm run package:chrome && npm run source-zip"
  },
  "keywords": [],
  "author": "Markus Lohmeier",
  "license": "MIT",
  "dependencies": {
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/chrome": "^0.1.36",
    "@types/firefox-webext-browser": "^143.0.0",
    "@types/node": "^25.2.2",
    "@types/webextension-polyfill": "^0.10.7",
    "nodemon": "^3.1.11",
    "path": "^0.12.7",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-iife": "^0.7.1",
    "tslib": "^2.8.1",
    "tsx": "^4.21.0",
    "web-ext": "^9.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mkoeppen/MocoTicketChecker.git"
  }
}
