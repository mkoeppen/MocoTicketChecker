{
  "manifest_version": 3,
  "name": "Moco Ticket Checker",
  "version": "1.0.1",
  "description": "Checks if ticket number matched with Moco project",
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "/images/logo16.jpg",
    "32": "/images/logo32.jpg",
    "48": "/images/logo48.jpg",
    "128": "/images/logo128.jpg"
  },
  "host_permissions": [
    "*://*.mocoapp.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.mocoapp.com/activities*"
      ],
      "js": [
        "browser-polyfill.js",
        "content.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ],
  "action": {
    "default_title": "Moco Ticket Checker",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/logo16.jpg",
      "32": "/images/logo32.jpg",
      "48": "/images/logo48.jpg",
      "128": "/images/logo128.jpg"
    }
  }
}
